    <ui-star value="{{orderMess.pjdj}}" bindchange="pingfen" readonly="{{orderMess.pjdj !=''}}"></ui-star>
  </ui-col> 
  <ui-col span=6  space-right="20" style="color:#686868;font-size:22px;font-weight:700">
      <ui-view>
        <ui-row style="color:#686868;font-size:12px">
