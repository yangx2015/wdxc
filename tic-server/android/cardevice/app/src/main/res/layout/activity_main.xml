<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".TestActivity">

    <TextView
        android:text="Please click the below button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msgshow" />



    <Button
        android:text="View Front"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewfront" />

    <Button
        android:text="View Rear"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewrear" />

    <Button
        android:text="Start Front Living"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/startLiving" />

    <Button
        android:text="Stop Front Living"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:id="@+id/stopLiving" />

    <Button
        android:text="Camera Preview"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraPreview" />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >
    <Button
        android:text="快照"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takepic"/>
    <Button
        android:text="视频"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takevideo" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/videohebin"
        android:text="合并视频"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadImgBtn"
        android:text="上传图片"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadMp4Btn"
        android:text="上传视频"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/localCar"
        android:text="获取位置信息"
        />
</LinearLayout>



</LinearLayout>
